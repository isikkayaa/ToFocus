<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.example.olacak.ui.fragment.ProfileFragment" />
        <variable
            name="viewModel"
            type="com.example.olacak.ui.viewmodel.ProfileViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FEEEFE">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="425dp"
            android:layout_height="667dp"
            android:layout_marginBottom="109dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:context=".ui.fragment.ProfileFragment">


            <EditText
                android:id="@+id/editTextText5"
                android:layout_width="198dp"
                android:layout_height="46dp"
                android:layout_marginTop="46dp"
                android:ems="10"
                android:hint="Your Name : "
                android:inputType="text"
                android:text="@={viewModel.userName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonUpload" />

            <Button
                android:id="@+id/buttonUpload"
                android:layout_width="196dp"
                android:layout_height="184dp"
                android:layout_marginTop="107dp"
                android:backgroundTint="@color/toolbar"
                android:onClick="@{() -> fragment.checkPermissionAndOpenImageChooser()}"
                android:text="upload image"
                android:textSize="22sp"
                app:icon="@drawable/baseline_upload_24"
                app:iconGravity="textTop"
                app:iconSize="60dp"
                app:iconTint="#D3BBBB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="196dp"
                android:layout_height="184dp"
                android:scaleType="centerCrop"
                app:imageUri="@{viewModel.profileImageUri}"
                app:layout_constraintBottom_toBottomOf="@+id/buttonUpload"
                app:layout_constraintEnd_toEndOf="@+id/buttonUpload"
                app:layout_constraintStart_toStartOf="@+id/buttonUpload"
                app:layout_constraintTop_toTopOf="@+id/buttonUpload" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="144dp"
                android:layout_height="49dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#A35180"
                android:onClick="@{() -> viewModel.saveProfileData(editTextText5.text.toString())}"
                android:text="Save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="249dp"
                android:layout_height="51dp"
                android:layout_marginTop="68dp"
                android:backgroundTint="@color/toolbar"
                android:onClick="@{() -> fragment.showLogoutConfirmationDialog()}"
                android:text="Logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSave" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>